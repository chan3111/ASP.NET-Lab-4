@model IEnumerable<Lab4.Models.Movie>
@{
    Layout = "_Layout";
}

<h2>Home</h2>
<table style="width: 100%;">
    @if (Model == null || Model.Count() == 0)
    {
        <tr>
            <td colspan="6">
                Currently, there are no models in the database.
                <br />
                <br />
            </td>
        </tr>
    }
    else
    {
        <tr>
            <th>
                Options
            </th>
            <th>
                Movie Title
            </th>
            <th>
                Movie SubTitle
            </th>
            <th>
                Description
            </th>
            <th>
                Year
            </th>
            <th>
                Rating
            </th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>
            <a asp-controller="Home" asp-action="EditMovie" asp-route-id="@item.MovieId">Edit</a>
            <br />
            <br />
            <a asp-controller="Home" asp-action="DeleteMovie" asp-route-id="@item.MovieId" onclick = "return confirm('Are you sure you wish to delete this article?');">Delete</a>
        </td>
        <td>@item.Title</td>
        <td>@item.SubTitle</td>
        <td>@item.Description</td>
        <td>@item.Year</td>
        <td>@item.Rating/5</td>
    </tr>
            }
        }
</table>